{
  "manifest_version": 2,
  "name": "Read Mode",
  "version": "1.0.7",
  "description": "Puts Google Chrome into read mode for a pleasant reading experience.",
  "icons": {
    "128": "icon-128.png",
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png"
  },
  "background": {
    "scripts": [ "json2.js", "background.js" ]
  },
  "content_scripts": [ {
    "all_frames": true,
    "css": [ "stylesheets/reader.css" ],
    "js": [ "js/reader.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "run_at": "document_start"
  } ],
  "page_action": {
    "default_icon": "icon-enabled.png",
    "default_title": "Toggle Read Mode."
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    }
  },
  "options_page": "options.html",
  "key": "MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQC8roxVhN04z9cuvmWmekXAk06tlIk/Btfo091/Btp7OW3dXdzj7rYT6eznAn/7uQ3EhG3iprRgv/2rRpY8vpIbg2uVEGpCWCuMSWPvd6PTiivinNy6oLCRigbvqtA3pojlrszbuVjOep1v7F24IkF5geuwrivYqEy4befPpRBfTQIDAQAB",
  "permissions": [ "storage", "tabs", "http://*/*", "https://*/*" ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "author": "xcv58"
}
